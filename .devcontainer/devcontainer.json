// .devcontainer/devcontainer.json
{
    // Utilise l'image de base (Universal Image)
    "image": "mcr.microsoft.com/devcontainers/universal:latest",

    // Bloque explicitement toutes les features par défaut (comme Git LFS)
    "features": {},

    // Définit le répertoire de travail standard de Codespaces
    "workspaceFolder": "/workspaces/${localWorkspaceFolder}",

    // Définit l'utilisateur non-root par défaut
    "remoteUser": "codespace",

    // [ACTION D'INSTALLATION] Exécute la commande après la création du conteneur.
    // L'installation de ces paquets rendra 'streamlit' disponible dans le terminal.
    "postCreateCommand": "pip install streamlit pandas requests" 
}
